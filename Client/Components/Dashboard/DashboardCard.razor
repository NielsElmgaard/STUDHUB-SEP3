@namespace Client.Components.Dashboard
@inherits ComponentBase

<div class="dashboard-card @(IsClickable ? "dashboard-card-clickable" : "")"
     @onclick="HandleClick">
    <div class="dashboard-card-header">
        <div class="d-flex align-items-center gap-2">
            @if (!string.IsNullOrWhiteSpace(IconCss))
            {
                <i class="@IconCss"></i>
            }
            <strong>@Title</strong>
        </div>
    </div>

    <div class="dashboard-card-body">
        <div class="widget-content-root">
            <div class="widget-main">
                @ChildContent
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string? IconCss { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    // NEW
    [Parameter] public bool IsClickable { get; set; } = false;
    [Parameter] public EventCallback OnClick { get; set; }

    private async Task HandleClick()
    {
        if (IsClickable && OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync();
        }
    }
}