@page "/Dashboard"

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Client.Components.Dashboard
@using Client.Services.Dashboard 

@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavManager
@inject DashboardRegistry Registry
@inject DashboardSettingsService SettingsService

<PageTitle>Dashboard</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="dashboard-header">
            <div class="dashboard-header-left">
                <h3 class="mb-1 page-title-glow">dashboard</h3>
                <small class="logged-in-info">logged in as @userEmail</small>
            </div>

            @if (isLoaded)
            {
                <div class="dashboard-header-right">
                    <div class="widget-filter">
                        <span class="widget-filter-label">// widgets</span>
                        <div class="widget-filter-list">
                            @foreach (var w in Registry.Widgets)
                            {
                                var isChecked = settings.EnabledWidgetIds.Contains(w.Id);
                                <label class="form-check widget-filter-item">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           checked="@isChecked"
                                           @onchange="e => ToggleWidget(w.Id, e)" />
                                    <span class="form-check-label">@w.Title</span>
                                </label>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Widget grid stays the same -->
        <div class="dashboard-grid">
            @foreach (var widget in VisibleWidgets)
            {
                var hasRoute = !string.IsNullOrEmpty(widget.DetailsRoute);

                <DashboardCard Title="@widget.Title"
                               IsClickable="@hasRoute"
                               OnClick="@(hasRoute ? () => NavManager.NavigateTo(widget.DetailsRoute!) : null)">
                    <DynamicComponent Type="@widget.ComponentType" />
                </DashboardCard>
            }
        </div>

    </Authorized>

    <NotAuthorized>
        <NotAuthorizedContent />
    </NotAuthorized>
</AuthorizeView>


@code {
    private string? userEmail;
    private DashboardSettings settings = new();
    private bool isLoaded = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated ?? false)
        {
            userEmail = user.Identity.Name;
            settings = await SettingsService.LoadAsync(userEmail!, Registry.Widgets);
        }
        else
        {
            // Not logged in: default to all enabled, no persistence
            settings = new DashboardSettings
            {
                EnabledWidgetIds = Registry.Widgets.Select(w => w.Id).ToHashSet()
            };
        }

        isLoaded = true;
    }

    private async Task ToggleWidget(string id, ChangeEventArgs e)
    {
        bool isChecked = (bool)e.Value!;
        if (isChecked)
            settings.EnabledWidgetIds.Add(id);
        else
            settings.EnabledWidgetIds.Remove(id);

        if (userEmail is not null)
            await SettingsService.SaveAsync(userEmail, settings);
    }

    private IEnumerable<DashboardWidgetDescriptor> VisibleWidgets =>
        Registry.Widgets.Where(w => settings.EnabledWidgetIds.Contains(w.Id));
}
